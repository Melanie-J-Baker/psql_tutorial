<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>
<body>
    <h1>
        <%= title %>
    </h1>

    <!-- Search Form -->
    <form action="/users/find-user/" method="GET">
        <input type="text" name="search" placeholder="Search for a username" value="<%= searchQuery %>">
        <button type="submit">Search</button>
    </form>

    <!-- Display search results -->
    <h2>Search Results</h2>
    <% if (users.length> 0) { %>
        <ul>
            <% users.forEach(user=> { %>
                <li>
                    <%= user.username %>
                </li>
                <% }); %>
        </ul>
        <% } else { %>
            <p>No users found.</p>
            <% } %>

</body>
</html>
